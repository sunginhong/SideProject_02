<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_vp_cardlayout_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal" android:clipChildren="false">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="450dp" android:id="@+id/item_vp_cardlayout_detailview"
            android:background="#ffffff"
            android:scaleX="0.5" android:scaleY="0.5" android:layout_marginTop="100dp">


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/item_vp_cardlayout_subtitle_top"
                    android:paddingBottom="20dp"
                    android:textAlignment="center" android:textColor="#000000"/>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_height="450dp"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:id="@+id/item_vp_main_cardview_rl_main" android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/item_vp_cardlayout_thumb_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" android:background="@drawable/ic_launcher_background"/>
            <TextView
                    android:id="@+id/item_vp_cardlayout_title_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#80000000"
                    android:shadowRadius="4"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="6sp"
                    tools:text="title" android:layout_marginBottom="6dp"
                    android:layout_gravity="center|top" android:paddingTop="15dp"/>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_gravity="bottom|center"
                    android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="15dp">
                <TextView
                        android:id="@+id/item_vp_cardlayout_title_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        tools:text="date"
                        android:layout_alignParentLeft="true"/>
                <TextView
                        android:id="@+id/item_vp_cardlayout_title_right"
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000000" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>